generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  text      String
  sender    String   @default("Anonymous")
  createdAt DateTime @default(now())
  timestamp DateTime @default(now()) // Keep both for backward compatibility
}